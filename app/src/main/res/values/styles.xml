<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Home_Text">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">#292828</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Home_Title">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">#292828</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="address_add_txt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_60</item>
        <item name="title_textsize">@dimen/dp_22</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--设置tabLayout字体大小-->
    <style name="MyCustomTabTextAppearance">
        <item name="android:textSize">17sp</item>
    </style>

</resources>